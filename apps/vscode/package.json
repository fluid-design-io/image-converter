{
  "publisher": "fluid-design-io",
  "name": "tiny-image",
  "displayName": "Tiny Image",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.4.1",
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "LICENSE.md",
    "dist/*",
    "res/*"
  ],
  "engines": {
    "vscode": "^1.97.0"
  },
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "compress",
        "title": "Compress Images",
        "shortTitle": "ti"
      },
      {
        "command": "compress-interactive",
        "title": "Compress Images with Options...",
        "shortTitle": "tio"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "compress",
          "when": "resourceExtname =~ /\\.(jpg|jpeg|png|webp|avif|tiff|tif|bmp|gif)$/i",
          "group": "7_modification"
        },
        {
          "command": "compress-interactive",
          "when": "resourceExtname =~ /\\.(jpg|jpeg|png|webp|avif|tiff|tif|bmp|gif)$/i",
          "group": "7_modification"
        }
      ],
      "commandPalette": [
        {
          "command": "compress",
          "when": "true"
        },
        {
          "command": "compress-interactive",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "Tiny Image Settings",
      "description": "Settings for Tiny Image",
      "properties": {
        "tiny-image.quality": {
          "type": "number",
          "title": "Default Compress Quality",
          "description": "The default image quality for the compressed image (0-100)",
          "default": 85,
          "minimum": 0,
          "maximum": 100
        },
        "tiny-image.format": {
          "type": "string",
          "title": "Default Compress Format",
          "description": "The default image format for the compressed image",
          "default": "same-as-source",
          "enum": [
            "same-as-source",
            "jpg",
            "png",
            "webp",
            "avif"
          ],
          "enumItemLabels": [
            "Same as Source",
            "JPG",
            "PNG",
            "WebP",
            "AVIF"
          ]
        }
      }
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts --external vscode",
    "dev": "nr build --watch --sourcemap",
    "prepare": "nr update",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.19.0",
    "@antfu/ni": "^23.3.1",
    "@types/node": "^22.17.0",
    "@types/vscode": "^1.102.0",
    "@vscode/vsce": "^3.6.0",
    "bumpp": "^10.2.2",
    "eslint": "^9.32.0",
    "esno": "^4.8.0",
    "pnpm": "^10.14.0",
    "reactive-vscode": "^0.2.22",
    "tsdown": "^0.9.9",
    "typescript": "^5.9.2",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "vscode-ext-gen": "^1.1.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "dependencies": {
    "sharp": "^0.34.3"
  }
}